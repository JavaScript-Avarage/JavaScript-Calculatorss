<!DOCTYPE html>
<html>
<body>
  <h2>Simple Calculator</h2>
  <input id="num1" type="number">
  <input id="num2" type="number">
  <button onclick="calc('+')">+</button>
  <button onclick="calc('-')">-</button>
  <button onclick="calc('*')">*</button>
  <button onclick="calc('/')">/</button>
  <p id="result"></p>

  <script>
    function calc(op){
      let a = parseFloat(num1.value);
      let b = parseFloat(num2.value);
      let r;
      if(op==='+') r=a+b;
      if(op==='-') r=a-b;
      if(op==='*') r=a*b;
      if(op==='/') r=a/b;
      result.textContent = "Result: " + r;
    }
  </script>
</body>
</html>
